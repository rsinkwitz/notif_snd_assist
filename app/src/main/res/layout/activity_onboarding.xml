<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="@color/bg_light_gray">

    <TextView
        android:id="@+id/tvOnboardingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_step1_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvOnboardingDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/onboarding_step1_description"
        android:textSize="16sp"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnOnboardingNext"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/btn_next"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnOnboardingSkip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/btn_skip"
        android:textSize="16sp"
        android:background="@drawable/rounded_button_gray"
        android:textColor="@android:color/white"/>
</LinearLayout>

