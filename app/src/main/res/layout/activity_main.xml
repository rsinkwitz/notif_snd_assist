<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/bg_light_gray">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@color/text_gray"/>

    <Button
        android:id="@+id/btnPendingApps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/btn_new_apps"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_green"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnSeenApps"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/btn_seen_apps"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_blue"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/btn_test_notification"
        android:textSize="18sp"
        android:background="@drawable/rounded_button_gray"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvRecentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recent_notifications_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotificationHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tvCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:textColor="@color/text_gray"/>
</LinearLayout>
